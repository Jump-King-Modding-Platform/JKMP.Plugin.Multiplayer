<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RuntimeIdentifier>win-x86</RuntimeIdentifier>
    <Nullable>enable</Nullable>
    <LangVersion>9</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>JKMP.Plugin.Multiplayer.Native</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Update="multiplayer_native.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Memory" Version="4.5.4" />
  </ItemGroup>

  <Target Name="Build natives and generate bindings" BeforeTargets="PrepareForBuild">
    <ItemGroup>
      <NativeFiles Include="$(SolutionDir)native/multiplayer_native/bindings_generator/target/i686-pc-windows-msvc/$(Configuration.toLower())/deps/multiplayer_native.dll" />
    </ItemGroup>
    
    <ItemGroup>
      <BindingsFiles Include="$(SolutionDir)native/multiplayer_native/bindings_generator/bindings/Bindings.cs" />
    </ItemGroup>
    
    <Message Importance="high" Text="Building native library..." />
    <Exec Command="cargo run" WorkingDirectory="$(SolutionDir)native/multiplayer_native/bindings_generator" />
    
    <Copy SourceFiles="@(NativeFiles)" DestinationFolder="$(ProjectDir)" />
    <Copy SourceFiles="@(BindingsFiles)" DestinationFolder="$(ProjectDir)" />
  </Target>

</Project>