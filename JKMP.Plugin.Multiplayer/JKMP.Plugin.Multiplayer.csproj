<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net462</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>9</LangVersion>
        <Version>0.1.0</Version>
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="Facepunch.Steamworks.win32" Version="2.3.4" />
      <PackageReference Include="JKMP.Core" Version="0.4.0" />
    </ItemGroup>
    <ItemGroup>
      <Reference Include="JumpKing, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>$(GameDirectory)\JumpKing.exe</HintPath>
      </Reference>
      <Reference Include="MonoGame.Framework, Version=3.7.1.189, Culture=neutral, PublicKeyToken=null">
        <HintPath>$(GameDirectory)\MonoGame.Framework.dll</HintPath>
      </Reference>
    </ItemGroup>
    <Import Project="$(SolutionDir)DevVars.targets" Condition="Exists('$(SolutionDir)DevVars.targets')" />

    <!-- Copy files to game directory if this is not a CI build and GameDirectory is defined -->
    <Target Name="CopyFilesToGameDirectory" AfterTargets="PostBuildEvent" Condition="$(CI) == '' And $(GameDirectory) != ''">
        <ItemGroup>
            <CoreFiles Include="$(TargetDir)JKMP.Plugin.Multiplayer.dll" />
            <CoreFiles Include="$(ProjectDir)plugin.json" />
            <CoreFiles Include="$(TargetDir)Facepunch.Steamworks.Win32.dll" />
        </ItemGroup>

        <Message Importance="high" Text="Copying @(CoreFiles->'%(filename)%(extension)') to $(GameDirectory)\JKMP\Plugins\Multiplayer" />
        <Copy SourceFiles="@(CoreFiles)" DestinationFolder="$(GameDirectory)\JKMP\Plugins\Multiplayer" SkipUnchangedFiles="true" />
    </Target>
</Project>
